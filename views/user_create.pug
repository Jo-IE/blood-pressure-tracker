extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='username') Username:
      input#first_name.form-control(type='text' placeholder='username' name='username' required='true' value=(undefined===username ? '' : username) )
      
    
    button.btn.btn-primary(type='submit') Submit
  if msg
   p=msg
  if errors 
    ul
      for error in errors
        li!= error.msg