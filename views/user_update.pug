extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='username') Username:
      input#username.form-control(type='text' placeholder='Enter username' name='username' required='true' value=(undefined===username ? '' : username) )
      
    div.form-group
      label(for='systolic') Systolic Blood Pressure:
      input#systolic.form-control(type='number' placeholder='e.g 120' name='systolic' required='true' value=(undefined===log ? '' : log.systolic))
      label(for='diastolic') Diastolic Blood Pressure:
      input#diastolic.form-control(type='number' placeholder='e.g 120' name='diastolic' value=(undefined===log ? '' : log.diastolic) )
      
    div.form-group
      label(for='date') Date(Today):
      input#date.form-control(type='date' name='date' required = 'true' value=(undefined===log ? '' : log.date) )
      
    div.form-group
      label(for='activity') Most Recent Activity:
      input#activity.form-control(type='text' placeholder='e.g "cooked dinner"' name='activity' required='true' value=(undefined===log ? '' : log.activity) )
      
    div.form-group
      label(for='lemonwater') Have you had at least one cup of lemon water today?:
      select#lemonwater.form-control(type='select' name='lemonwater' required='true')
        option(value='yes' selected=(undefined!=log && log.lemonwater ==='yes'? 'selected' : false)) Yes
        option(value='no' selected=(undefined!=log && log.lemonwater === 'no' ? 'selected' : false)) No
    button.btn.btn-primary(type='submit') Submit
  
  if errors 
    ul
      for error in errors
        li!= error.msg