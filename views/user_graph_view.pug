extends layout
block content
 h1=title
 
 form(method='POST' action='')
    div.form-group
      label(for='username') Username:
      input#username.form-control(type='text' placeholder='username' name='username' required='true' value=(undefined===username ? '' : username) )
      
    div.form-group
      label(for='from') From:
      input#from.form-control(type='date' name='from' required='true' value=(undefined===from ? '' : from) )
      
      label(for='to') To:
      input#to.form-control(type='date' name='to' required='true' value=(undefined===to ? '' : from) )
      
    
    button.btn.btn-primary(type='submit') Submit
 if msg
  p=msg
 if errors 
  ul
   for error in errors
    li!= error.msg